<CustomTopAppBar>:
    MDTopAppBar:
        id: topbar
        title: "Helpdroid"
        elevation: 3
        pos_hint: {"top": 1}
        font_style: "H2"
        specific_text_color: app.theme_cls.primary_color
        md_bg_color: app.theme_cls.accent_color
        right_action_items:
            [
            ["logout", lambda x: app.logout(), "", "Logout"],
            ["bell", lambda x: app.notification(), "" , "Notifications"],
            ]
<MenuHeader>
    spacing: "12dp"
    padding: "4dp"
    adaptive_height: True
MDScreen:
    name: "welcomeD"
    
    MDBottomNavigation:
        id: bottom_navigation
        selected_color_background: app.theme_cls.accent_color
        text_color_active: app.theme_cls.primary_color
        

        MDBottomNavigationItem:
            name: 'patient'
            text: '{Patient}'
            icon: 'doctor'
            CustomTopAppBar:
            MDRaisedButton:
                text: "Upcoming Appointments"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                md_bg_color: app.theme_cls.primary_color
                on_release: 
            MDRaisedButton:
                id: button
                text: "Patient List"
                pos_hint: {"center_x": 0.5, "center_y": .4}
                on_release: 
            
        MDBottomNavigationItem:
            name: 'Appointments'
            text: 'Appointments'
            icon: 'account-edit'
            CustomTopAppBar:
            MDRaisedButton:
                text: "Add Appointments"
                size_hint: None, None
                size: dp(150), dp(50)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                ripple_behavior: "auto"
                on_release: 
                    root.manager.transition.direction="left"
                    root.manager.current="editapt"
            MDRaisedButton:
                text: "Manage Appointments"
                size_hint: None, None
                size: dp(150), dp(50)
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                ripple_behavior: "auto"
                on_release: 
                    root.manager.transition.direction="left"
                    root.manager.current="deleteapt"
                    app.delete_apt()
            
